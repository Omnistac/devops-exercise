{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"sourceMap": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@monorepo/*": ["common/*", "services/*", "devops/*"]
		}
	},
	"exclude": ["node_modules"],
	"references": [
		{ "path": "./common/logger" },
		{ "path": "./common/health" },
		{ "path": "./services/user" },
		{ "path": "./services/trading" },
		{ "path": "./devops/integrations" },
		{ "path": "./devops/maintenance" }
	]
}
